<% provide(:title, 'Novo grau ou título') %>


<%= form_for(@degree) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :status, "Status" %>
    <%= f.select :status, options_for_select(@options_for_select_status) %>
    
    <%= f.label :subtype, "Tipo" %>
    <%= f.text_field :subtype %>

    <%= f.label :date, "Data" %>
    <%= f.text_field :date %>

    <%= f.label :institution, "Instituição" %>
    <%= f.text_field :institution %>

    <%= f.submit "Criar" %>
<% end %>
