<li id="<%= feed_item.id %>" class="feed-item">
	<span class="user">
        <%= link_to feed_item.user.name, feed_item.user %>
    </span>

    <% if current_user.id == feed_item.user.id %>
        <span><%= link_to '<i class="icon-remove"></i>'.html_safe, feed_item, method: :delete, data: {confirm: "VocÃª tem certeza que deseja excluir este input?"} %></span>
    <% end %>
    <br />

    <span><%= render feed_item %></span>
	<span class="timestamp">
    <%= post_time_format(feed_item.created_at) %>
    </span>
    <div><%= render 'shared/give_kudo', input: feed_item %></div>
    
</li>
