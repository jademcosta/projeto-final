<% provide(:title, 'Nova orientação') %>

<%= form_for(@orientation) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :status, "Status" %>
    <%= f.select :status, options_for_select(@options_for_select_status) %><br />
    
    <%= f.label :date, "Data de início" %>
    <%= f.text_field :date %><br />

    <%= f.label :end_date, "Data de fim" %>
    <%= f.text_field :end_date %><br />

    <%= f.label :institution, "Instituição" %>
    <%= f.text_field :institution %><br />
    
    <%= f.label :subtype, "Tipo" %>
    <%= f.select :subtype, options_for_select(@options_for_select_subtype) %><br />

    <%= f.label :institution, "Instituição" %>
    <%= f.text_field :institution %><br />

    <%= f.label :student, "Estudante" %>
    <%= f.text_field :student %><br />

    <%= f.label :title, "Título ou tema" %>
    <%= f.text_field :title %><br />

    <%= f.label :text, "Descrição" %>
    <%= f.text_field :text %><br />

    <%= f.submit "Criar", class: "btn btn-large btn-primary" %>
<% end %>
