<% provide(:title, 'Lista de usuários') %>

<h1>Usuários</h1>

<%= form_tag users_path, :method => 'get' do %>
    <p>
        <%= label_tag :search, "Filtrar"%>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Filtrar", :name => nil %>
    </p>
<% end %>

<%= will_paginate %>

<ul class="users">
	<% # a linha abaixo eh o mesmo que: @users.each do |user| %>
	<% # O rails jah sabe que ao chamar a linha abaixo, por ela ser um array,  %>
	<% # ele tem que procurar pela partial chamada _user %>
	<%= render @users %>
</ul>

<%= will_paginate %>
