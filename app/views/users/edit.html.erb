<% provide(:title, "Editar perfil") %>

<h1>Editar perfil</h1>

<%= form_for(@user) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name, "Nome" %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :homepage, "Homepage" %>
    <%= f.text_field :homepage %>

    <%= f.label :institution, "Instituição" %>
    <%= f.text_field :institution %>

    <%= f.label :job_title, "Cargo" %>
    <%= f.text_field :job_title %>

    <%= f.label :title, "Título" %>
    <%= f.text_field :title %>

    <%= f.label :image, "Foto" %>
    <%= f.file_field :image %>

    <%= f.label :password, "Senha" %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirme a senha" %>
    <%= f.password_field :password_confirmation %>
    <br />
    <%= f.submit "Salvar alterações", class: "btn btn-large btn-primary" %>
<% end %>
