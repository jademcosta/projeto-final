<% provide(:title, @title) %>

<div class="row">
	<aside class="span4">
		<section>
			<h1><%= link_to @user.name, @user %><%=  %></h1>
			<span></span>
		</section>

		<section>
			<%= render 'shared/stats' %>
		</section>
	</aside>

	<div class="span8">
		<h3><%= @title %></h3>
		<% if @users.any? %>
            <ul class="users">
                <%= render @users %>
			</ul>
			<%= will_paginate %>
		<% end %>
	</div>
</div>
