<% provide(:title, 'Nova publicação') %>

<%= form_for(@publication) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :status, "Status" %>
    <%= f.select :status, options_for_select(@options_for_select_status) %><br />
    
    <%= f.label :title, "Título/tema" %>
    <%= f.text_field :title %><br />

    <%= f.label :text, "Descrição/resumo" %>
    <%= f.text_area :text %><br />

    <%= f.label :abstract, "Abstract" %>
    <%= f.text_area :abstract %><br />
    
    <%= f.label :language, "Língua" %>
    <%= f.text_field :language %><br />

    <%= f.label :link, "Link para o manuscrito" %>
    <%= f.text_field :link %><br />

    <%= f.label :doi, "DOI" %>
    <%= f.text_field :doi %><br />

    <%= f.label :bibtex, "Bibtex" %>
    <%= f.text_field :bibtex %><br />

    <%= f.label :subtype, "Tipo" %>
    <%= f.select :subtype, options_for_select(@options_for_select_subtype) %><br />

    <%= f.fields_for :authors do |builder| %>
    <%= render 'shared/author_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Adicionar autor", f, :authors %>
    
    <br />

    <%= f.submit "Criar", class: "btn btn-large btn-primary" %>
<% end %>
